{
  "compilerOptions": {
    "target": "ES6",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "jsx": "preserve",
    "moduleResolution": "Node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "comps": [
        "components"
      ],
      "hooks": [
        "core/hooks"
      ],
      "gql": [
        "core/gql"
      ],
      "nhost": [
        "core/nhost"
      ],
      "mime": [
        "core/mime"
      ],
      "hoc": [
        "core/hoc"
      ],
      "core/path": [
        "core/path"
      ],
      "core/document": [
        "core/document"
      ],
      "core/constants": [
        "core/constants"
      ],
      "core/util": [
        "core/util"
      ]
    },
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "module": "esnext",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
